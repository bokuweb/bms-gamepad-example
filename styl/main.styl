@import url(https://fonts.googleapis.com/css?family=Play);

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  {prop} args

html, body
  margin 0
  padding 0
  height 100%
  width 100%
  overflow hidden
  background #f5f5f5
  font-family 'Play', sans-serif

